@model ProductDTO

<div class="container mt-4">
    <h2 class="mb-4">Create Product</h2>
    <form method="post" class="needs-validation">
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" id="Name" name="Name" class="form-control" value="@Model?.Name" required />
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea id="Description" name="Description" class="form-control" required>@Model?.Description</textarea>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input type="number" id="Price" name="Price" class="form-control" value="@Model?.Price" step="0.01" required />
        </div>

        <div class="mb-3">
            <label for="Stock" class="form-label">Stock</label>
            <input type="number" id="Stock" name="Stock" class="form-control" value="@Model?.Stock" required />
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p class="text-danger mt-3">@ViewBag.Error</p>
    }
</div>